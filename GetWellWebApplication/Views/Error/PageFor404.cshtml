@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    @Styles.Render("~/Accueil/css")
    @Styles.Render("~/Content/css")
    <title>Error 404</title>
</head>
<body>
    @using (Html.BeginForm("PageFor404Post", "Error", FormMethod.Post))
    {
        <div class="container Error-container text-white">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6 paragraphs-container">
                    <p class="Error-type">404</p>
                    <p class="description">cette page est introuvable, veuilez aller a la page d'accueil</p>

                </div>
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <img src="~/Images/—Pngtree—404 error illustration modern flat_4188250.png" class="Error-image" />
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <input type="submit" value="aller a la page d'accueil" id="GoToHome">
                </div>
            </div>
        </div>
